{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": false,
    "removeComments": true,
    "lib": [
      "dom",
      "es6"
    ],
    "declaration": true,
    "declarationDir": "./dist",
    "importHelpers": false,
    "strict": true,
    "baseUrl": "./",
    "typeRoots": [
      "./node_modules/@types",
      "./src/type-declarations"
    ],
    "types": [
      "webpack-env",
      "mocha",
      "node"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
